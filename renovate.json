{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base"],
  "packageRules": [
    {
      "packagePatterns": ["*"],
      "excludePackagePatterns": [
        "@tscircuit/*",
        "circuit-to-svg",
        "jscad-electronics",
        "circuit-json"
      ],
      "enabled": false
    },
    {
      "matchUpdateTypes": ["major", "minor", "patch"],
      "automerge": true,
      "groupName": "dependency updates",
      "groupSlug": "all-updates"
    }
  ]
}
